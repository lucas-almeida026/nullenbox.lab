---
import Page from "../layouts/Page.astro";
import Footer from "../components/Footer.astro";
---

<Page title="Projects" description="My projects and experiments">
  <main class="container mx-auto max-w-screen-xl px-8 py-12">
    <h1 class="text-4xl font-bold text-center mb-4">Projects</h1>
    <p class="text-center text-on-surface-muted mb-12">
      A collection of things I've built, experiments, and side projects.
    </p>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Add your projects here as cards -->
      <div class="card p-6">
        <h2 class="text-xl font-semibold mb-3">Project Name</h2>
        <p class="text-on-surface-muted mb-4">
          Description of the project goes here.
        </p>
        <div class="flex gap-2">
          <span
            class="px-2 py-1 text-xs rounded-full bg-secondary/10 text-secondary"
            >Tag</span
          >
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Page>
