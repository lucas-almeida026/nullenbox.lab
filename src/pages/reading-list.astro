---
import Page from "../layouts/Page.astro";
import Footer from "../components/Footer.astro";
---

<Page title="Reading List" description="Books and articles I recommend">
  <main class="container mx-auto max-w-7xl px-8 py-12">
    <h1 class="text-4xl font-bold text-center mb-4">Reading List</h1>
    <p class="text-center text-on-surface-muted mb-12">
      Books, articles, and resources that I've found valuable.
    </p>

    <div class="grid gap-6 max-w-2xl mx-auto">
      <!-- Add your reading items here -->
      <div class="card p-6">
        <h2 class="text-xl font-semibold mb-2">Book Title</h2>
        <p class="text-on-surface-muted text-sm mb-2">by Author Name</p>
        <p class="text-on-surface-muted">
          A brief description or review of the book.
        </p>
      </div>
    </div>
  </main>
  <Footer />
</Page>
